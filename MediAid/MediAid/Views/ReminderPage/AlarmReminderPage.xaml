<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediAid.Views.AlarmReminderPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Reminder.Name}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                   TextColor="Black"
                   FontSize="35"/>
            <ListView ItemsSource="{Binding Reminder.Drugs}"
                               ItemTapped="To_PillDetails"
                               VerticalOptions="FillAndExpand"
                               HasUnevenRows="true"
                               CachingStrategy="RecycleElement"
                               ItemTemplate="{StaticResource PillsTemplate}">

            </ListView>
            <Button x:Name="PlayReminderBtn" Text="Play Reminder" Clicked="Play_Audio_Reminder"  BackgroundColor="{StaticResource Primary}" TextColor="White"/>
            <Button x:Name="PlayVideoReminderBtn" Text="Play Video Reminder" Clicked="Play_Video_Reminder"  BackgroundColor="{StaticResource Primary}" TextColor="White"/>
            <Button Text="Done" Clicked="NextReminder"  BackgroundColor="{StaticResource Primary}" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>