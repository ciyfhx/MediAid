<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediAid.Views.SettingsPage">
    <ContentPage.Content>
        <ScrollView>
            <Frame>
                <StackLayout VerticalOptions="StartAndExpand">
                    <Image Source="{Binding ProfilePicture}" WidthRequest="50" HeightRequest="50" />
                    <Label Text="{Binding Settings.Username}" HorizontalTextAlignment="Center" Style="{DynamicResource SubtitleStyle}"/>
                    <Label x:Name="Verified" HorizontalTextAlignment="Center" Style="{DynamicResource SubtitleStyle}"/>
                    <Button Text="Restore" Clicked="Restore"  BackgroundColor="{StaticResource Primary}" TextColor="White"/>
                </StackLayout>
            </Frame>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>