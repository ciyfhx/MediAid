<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediAid.Views.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="15" >
            <Label x:Name="Info" IsVisible="False" TextColor="Black" FontSize="Medium"/>
            <Label Text="Email:" />
            <Entry Text="{Binding Email}" Placeholder="Email"/>
            <Button Text="Reset Password" Clicked="Reset" BackgroundColor="{StaticResource Primary}" TextColor="White">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>