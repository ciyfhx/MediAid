<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediAid.Views.LoginPage"
             Title="Login">
    <ContentPage.Content>
        <Frame>
            <StackLayout Padding="5" Spacing="5">
                <Label Text="Login to MediAid" FontSize="Large"/>
                <Entry Text="{Binding Username}" Placeholder="Username/Email" />
                <Entry Text="{Binding Password}" IsPassword="True" Placeholder="Password" />
                <Label x:Name="Warning" FontSize="Medium" TextColor="Red"/>
                <Button Text="Login" Clicked="Login_ToFirebase"  BackgroundColor="{StaticResource Primary}" TextColor="White"/>
                <Label x:Name="CreateAccountLbl" FontSize="Medium" Text="Create account" TextColor="Blue"/>
                <Label x:Name="ForgotPasswordLbl" FontSize="Medium" Text="Forgot password" TextColor="Blue"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>