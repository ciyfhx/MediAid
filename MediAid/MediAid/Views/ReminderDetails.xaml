<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediAid.Views.ReminderDetails">
    <ContentPage.Content>

        <StackLayout Spacing="20" Padding="15">
            <Frame>
                <StackLayout  Spacing="20" Padding="15">

                    <Label HorizontalTextAlignment="Center" x:Name="Reminder"  FontSize="Large" />

                    <ListView ItemsSource="{Binding Drugs}"
                               ItemTapped="Handle_ItemTapped"
                               VerticalOptions="FillAndExpand"
                               HasUnevenRows="true"
                               CachingStrategy="RecycleElement"
                               ItemTemplate="{StaticResource PillsTemplate}">

                    </ListView>
                </StackLayout>
            </Frame>

            <Button Text="Play Reminder" Clicked="Play_Reminder" BackgroundColor="{StaticResource Primary}" TextColor="White"></Button>
            <Button Text="Remove Reminder" Clicked="Play_Reminder" BackgroundColor="{StaticResource Primary}" TextColor="White"></Button>
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>