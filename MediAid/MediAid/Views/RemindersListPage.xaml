<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="MediAid.Views.RemindersListPage">
<ContentPage.ToolbarItems>
  <ToolbarItem Text="Add Reminder" Clicked="AddReminder_Clicked" />
</ContentPage.ToolbarItems>
    <ListView ItemsSource="{Binding Reminders}"
            ItemTapped="Handle_ReminderTapped"
            VerticalOptions="FillAndExpand"
            HasUnevenRows="true"
            CachingStrategy="RecycleElement">

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Name}" 
                         Style="{DynamicResource ListReminderTextStyle}" 
                         FontSize="16"/>
                        <Label Text="{Binding Message}" 
                         Style="{DynamicResource ListReminderDetailTextStyle}"
                         FontSize="16"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>